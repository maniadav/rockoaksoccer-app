{
  "extends": "expo/tsconfig.base",
  "compilerOptions": {
    "strict": true,
    "baseUrl": "./src",
    "paths": {
      "@components/*": ["components/*"],
      "@utils/*": ["utils/*"],
      "@store/*": ["store/*"],
      "types/*": ["types/*"],
      "@services/*": ["services/*"],
      "@models/*": ["models/*"],
      "@hooks/*": ["hooks/*"],
      "@middleware/*": ["middleware/*"],
      "@helper/*": ["helper/*"],
      "@constants/*": ["constants/*"],
      "@context/*": ["context/*"],
      "@api/*": ["api/*"],
      "@styles/*": ["styles/*"],
      "@images/*": ["assets/images/*"]
    }
  },
  "include": ["**/*.ts", "**/*.tsx", ".expo/types/**/*.ts", "expo-env.d.ts"]
}
